<section class="container">
  <div class="right-container">
    <div class="row">
      <div class="card">
        <h3><%= @votable.inspect %></h3>
      </div>
      <div class="card">
        <h3><%= @votes.size %> votes</h3>
      </div>
    </div>
    <div class="row">
      <% @votes.each do |vote| %>
        <%= render partial: './teachers/teacher', locals: { teacher: vote.voted_by } %>
      <% end %>
    </div>
    <div class="pagination-row">
      <%== pagy_nav(@pagy) %>
    </div>
  </div>
</secion>
